{
  "name": "@porsche-design-system/vue",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently -k -s 'first' -n 'cdn,vue' 'serve-cdn' 'vite'",
    "start-app": "concurrently -k -s 'first' -n 'cdn,app' 'serve-cdn' 'ws --spa index.html -p 5173 -d ./dist/demo-app'",
    "build": "yarn clean:build && yarn build:vue-wrapper",
    "build:vue-wrapper": "vite build && vue-tsc --emitDeclarationOnly && yarn build:bundle",
    "build:bundle": "yarn build:bundle:partialsAndUtilities && yarn build:bundle:typings",
    "build:bundle:partialsAndUtilities": "yarn rollup -c ./projects/vue-wrapper/rollup.config.js --bundleConfigAsCjs",
    "build:bundle:typings": "yarn build:bundle:typings:partials && yarn build:bundle:typings:utilities",
    "build:bundle:typings:partials": "tsc projects/vue-wrapper/src/partials.ts --declaration --emitDeclarationOnly --declarationDir dist/vue-wrapper/partials --types node,react",
    "build:bundle:typings:utilities": "tsc projects/vue-wrapper/src/utilities/js.ts --declaration --emitDeclarationOnly --declarationDir dist/vue-wrapper/utilities/js --types node,react",
    "build-app": "yarn clean:build:app && vue-tsc --noEmit --project tsconfig.app.json && vite build -c vite.app.config.ts",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --ignore-pattern **/tests/* ",
    "test": "yarn test:unit && yarn test:e2e && yarn test:vrt",
    "test:unit": "yarn test:unit:vue-wrapper",
    "test:unit:vue-wrapper": "jest --colors -c projects/vue-wrapper/tests/unit/config/jest.config.js",
    "test:e2e": "yarn build-app && TYPE=E2E PORT=5173 jest --colors -c tests/e2e/config/jest.config.ts",
    "test:vrt": "if [ \"$CI\" != true ]; then yarn build-app; fi && TYPE=VRT PORT=5173 jest --colors -c tests/vrt/config/jest.config.ts",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist",
    "clean:build:app": "rm -rf ./dist/demo-app",
    "clean:build:package": "rm -rf ./dist/vue-wrapper"
  },
  "dependencies": {
    "@porsche-design-system/components-vue": "^2.18.0-rc.1",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@porsche-design-system/assets": "5.0.2",
    "@porsche-design-system/shared": "0.0.0",
    "@rollup/plugin-typescript": "^10.0.1",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "concurrently": "^7.6.0",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "local-web-server": "^5.2.1",
    "rollup": "^3.7.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "typescript": "~4.9.3",
    "vite": "^4.0.0",
    "vite-plugin-ejs": "^1.6.4",
    "vite-plugin-static-copy": "^0.13.0",
    "vue-tsc": "^1.0.13"
  }
}
